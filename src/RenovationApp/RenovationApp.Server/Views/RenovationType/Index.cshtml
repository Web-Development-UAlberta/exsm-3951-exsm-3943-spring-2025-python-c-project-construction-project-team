@model IEnumerable<RenovationApp.Models.RenovationType>
<h2>Renovation Types</h2>
<table class="table table-striped">
    <thead><tr><th>Name</th><th>Description</th><th>Actions</th></tr></thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.Name">Edit</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Name">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-success">Add New</a>