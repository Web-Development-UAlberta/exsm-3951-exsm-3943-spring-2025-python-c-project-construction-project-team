@model IEnumerable<RenovationApp.Server.Models.RFQStatus>

<h2>Request for Quote (RFQ) Statuses</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<p><a class="btn btn-success" asp-action="Create">Add New Status</a></p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Status</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Status">Details</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Status">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>