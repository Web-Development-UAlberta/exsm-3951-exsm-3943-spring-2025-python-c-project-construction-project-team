@model RenovationApp.Server.Models.RFQImage

<h2>Edit RFQ Image</h2>

<form asp-action="Edit" method="post" autocomplete="off">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="RFQId" class="control-label"></label>
        <select asp-for="RFQId" asp-items="ViewBag.RFQId" class="form-control"></select>
        <span asp-validation-for="RFQId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUri" class="control-label"></label>
        <input asp-for="ImageUri" class="form-control" />
        <span asp-validation-for="ImageUri" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}