@model RenovationApp.Server.Models.RFQ

<h2>Create RFQ</h2>

<form asp-action="Create" method="post" autocomplete="off">
    <div class="form-group">
        <label asp-for="ClientId"></label>
        <select asp-for="ClientId" asp-items="ViewBag.ClientId" class="form-control"></select>
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AssignedEmployeeId"></label>
        <select asp-for="AssignedEmployeeId" asp-items="ViewBag.AssignedEmployeeId" class="form-control"></select>
        <span asp-validation-for="AssignedEmployeeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PreferredMaterial"></label>
        <input asp-for="PreferredMaterial" class="form-control" />
        <span asp-validation-for="PreferredMaterial" class="text-danger"></span>
    </div>
    <div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RenovationType"></label>
        <select asp-for="RenovationType" asp-items="ViewBag.RenovationType" class="form-control"></select>
        <span asp-validation-for="RenovationType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" asp-items="ViewBag.Status" class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
    <label asp-for="ProjectAddress"></label>
    <input asp-for="ProjectAddress" class="form-control" />
    <span asp-validation-for="ProjectAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoomSize"></label>
        <input asp-for="RoomSize" class="form-control" />
        <span asp-validation-for="RoomSize" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Budget"></label>
        <input asp-for="Budget" class="form-control" />
        <span asp-validation-for="Budget" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}